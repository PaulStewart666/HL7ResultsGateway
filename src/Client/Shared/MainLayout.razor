@inherits LayoutComponentBase

<div class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm" role="navigation"
            aria-label="Main navigation">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" data-test="nav-brand">HL7 Results Gateway</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0" role="menubar">
                        <li class="nav-item" role="none">
                            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All" role="menuitem">Home</NavLink>
                        </li>
                        <li class="nav-item" role="none">
                            <NavLink class="nav-link" href="/results" role="menuitem">Results</NavLink>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        <LanguageToggle />
                        <LoginDisplay />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main id="maincontent" class="flex-grow-1 container py-4" tabindex="-1">
        @Body
    </main>
    <footer class="mt-auto bg-light border-top py-3" role="contentinfo">
        <div class="container small text-muted d-flex flex-wrap justify-content-between gap-2">
            <span>&copy; @DateTime.UtcNow.Year HL7 Results Gateway</span>
            <span>v0.1.0-preview</span>
        </div>
    </footer>
</div>
