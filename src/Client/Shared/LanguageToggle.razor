@code {
    private string current = "en";

    private void Toggle(string culture)
    {
        if (current == culture) return;
        current = culture;
        // TODO: Wire to localization system once implemented.
    }
}

<div class="language-toggle btn-group" role="group" aria-label="Language selection">
    <button type="button" class="btn btn-outline-primary @(current=="en"?"active":"")" @onclick="() => Toggle("en")" aria-pressed="@(current=="en")">EN</button>
    <button type="button" class="btn btn-outline-primary @(current=="cy"?"active":"")" @onclick="() => Toggle("cy")" aria-pressed="@(current=="cy")">CY</button>
</div>
