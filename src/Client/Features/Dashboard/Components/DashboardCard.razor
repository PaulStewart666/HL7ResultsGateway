@* Responsive, accessible dashboard card using Bootstrap *@
<div class="card shadow-sm h-100" style="min-width: 220px;" role="region" aria-label="@Title">
  <div class="card-body d-flex flex-column justify-content-between">
    <div class="mb-2">
      <h2 class="card-title h5" style="font-family: 'Roboto Slab', serif;">@Title</h2>
      @if (!string.IsNullOrWhiteSpace(Subtitle))
      {
        <h3 class="card-subtitle h6 text-muted">@Subtitle</h3>
      }
    </div>
    <div class="flex-grow-1">
      @ChildContent
    </div>
  </div>
</div>
@code {
  [Parameter]
  public string Title { get; set; } = string.Empty;
  [Parameter]
  public string? Subtitle { get; set; }
  [Parameter]
  public RenderFragment? ChildContent { get; set; }
}
