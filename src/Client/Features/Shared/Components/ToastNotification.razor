@* Accessible, theme-aware toast notification using Bootstrap *@
<div class="toast align-items-center text-bg-primary border-0 show" role="status" aria-live="polite" aria-atomic="true" style="min-width: 280px;">
  <div class="d-flex">
    <div class="toast-body">
      @Message
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close" @onclick="OnClose"></button>
  </div>
</div>
@code {
  [Parameter]
  public string Message { get; set; } = string.Empty;
  [Parameter]
  public EventCallback OnClose { get; set; }
}
