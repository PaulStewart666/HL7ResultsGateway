@inherits LayoutComponentBase
@using HL7ResultsGateway.Client.Features.Shared.Components
@using HL7ResultsGateway.Client.Core.Theming
@inject IThemeService ThemeService


<header class="theme-header" role="banner">
    <a href="#maincontent" class="sr-only sr-only-focusable skip-link">Skip to main content</a>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" aria-label="Main navigation" role="navigation">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <span class="fa fa-notes-medical" role="img" aria-label="HL7 Medical Clipboard"></span>
                <span class="fw-bold">HL7 Results Gateway</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/hl7/testing">
                            <i class="fa fa-flask me-1" aria-hidden="true"></i>
                            HL7 Testing
                        </a>
                    </li>
                </ul>
                <LoginDisplay />
                <ThemeSwitcher />
            </div>
        </div>
    </nav>
</header>

<main id="maincontent" class="container py-4" tabindex="-1" role="main">
    @Body
</main>

<div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
    <!-- Toast notifications will be rendered here -->
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await ThemeService.InitializeAsync();
    }
}
