@using HL7ResultsGateway.Client.Features.JsonToHL7.Models
@inject IJSRuntime JSRuntime

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fa fa-file-text-o me-2" aria-hidden="true"></i>
            HL7 Conversion Results
        </h5>
    </div>
    <div class="card-body">
        @if (Result == null)
        {
            <div class="text-center text-muted py-5">
                <i class="fa fa-arrow-up fa-2x mb-3" aria-hidden="true"></i>
                <p class="mb-0">Enter patient and observation data above, then click "Convert to HL7" to see the results here.</p>
            </div>
        }
        else if (!Result.Success)
        {
            <!-- Error State -->
            <div class="alert alert-danger" role="alert">
                <h6 class="alert-heading">
                    <i class="fa fa-exclamation-triangle me-1" aria-hidden="true"></i>
                    Conversion Failed
                </h6>
                @if (!string.IsNullOrEmpty(Result.ErrorMessage))
                {
                    <p class="mb-2">@Result.ErrorMessage</p>
                }
                @if (Result.ValidationErrors?.Any() == true)
                {
                    <div class="mt-3">
                        <strong>Validation Errors:</strong>
                        <ul class="mb-0 mt-2">
                            @foreach (var error in Result.ValidationErrors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }
                <div class="mt-3">
                    <button type="button" class="btn btn-outline-danger btn-sm" @onclick="ClearResults">
                        <i class="fa fa-times me-1" aria-hidden="true"></i>
                        Clear Results
                    </button>
                </div>
            </div>
        }
        else
        {
            <!-- Success State -->
            <div class="alert alert-success" role="alert">
                <h6 class="alert-heading">
                    <i class="fa fa-check-circle me-1" aria-hidden="true"></i>
                    Conversion Successful
                </h6>
                <p class="mb-0">JSON data has been successfully converted to HL7 v2 format.</p>
            </div>

            <!-- HL7 Message Display -->
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">
                        <i class="fa fa-code me-1" aria-hidden="true"></i>
                        HL7 Message
                    </h6>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary btn-sm" @onclick="CopyHL7Message">
                            <i class="fa fa-copy me-1" aria-hidden="true"></i>
                            Copy Message
                        </button>
                        <button type="button" class="btn btn-outline-info btn-sm" @onclick="DownloadHL7Message">
                            <i class="fa fa-download me-1" aria-hidden="true"></i>
                            Download
                        </button>
                    </div>
                </div>
                <div class="position-relative">
                    <pre class="bg-light p-3 border rounded" style="white-space: pre-wrap; font-family: 'Courier New', monospace; font-size: 0.875rem; max-height: 400px; overflow-y: auto;"><code>@Result.HL7Message</code></pre>
                    @if (!string.IsNullOrEmpty(CopyStatus))
                    {
                        <div class="position-absolute top-0 end-0 me-2 mt-2">
                            <span class="badge bg-success">@CopyStatus</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Parsed Result Display -->
            @if (Result.ParsedResult != null)
            {
                <div class="mb-4">
                    <h6 class="mb-3">
                        <i class="fa fa-eye me-1" aria-hidden="true"></i>
                        Parsed HL7 Data
                    </h6>

                    <div class="row">
                        <!-- Message Information -->
                        <div class="col-md-6 mb-3">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">
                                        <i class="fa fa-info-circle me-1" aria-hidden="true"></i>
                                        Message Information
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Message Type:</dt>
                                        <dd class="col-sm-8">@Result.ParsedResult.MessageType</dd>

                                        <dt class="col-sm-4">Request ID:</dt>
                                        <dd class="col-sm-8">
                                            <code class="text-muted">@Result.RequestId</code>
                                        </dd>

                                        <dt class="col-sm-4">Processed At:</dt>
                                        <dd class="col-sm-8">@Result.ProcessedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                                        <dt class="col-sm-4">Processing Time:</dt>
                                        <dd class="col-sm-8">@Result.ProcessingTime.TotalMilliseconds.ToString("F1") ms</dd>

                                        <dt class="col-sm-4">Source:</dt>
                                        <dd class="col-sm-8">@Result.Source</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Patient Information -->
                        @if (Result.ParsedResult.Patient != null)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card border-primary">
                                    <div class="card-header bg-primary text-white">
                                        <h6 class="mb-0">
                                            <i class="fa fa-user me-1" aria-hidden="true"></i>
                                            Patient Information
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">Patient ID:</dt>
                                            <dd class="col-sm-8">
                                                <code class="text-primary">@Result.ParsedResult.Patient.PatientId</code>
                                            </dd>

                                            <dt class="col-sm-4">Name:</dt>
                                            <dd class="col-sm-8">
                                                @Result.ParsedResult.Patient.FirstName @Result.ParsedResult.Patient.MiddleName @Result.ParsedResult.Patient.LastName
                                            </dd>

                                            <dt class="col-sm-4">Date of Birth:</dt>
                                            <dd class="col-sm-8">@Result.ParsedResult.Patient.DateOfBirth.ToString("yyyy-MM-dd")</dd>

                                            <dt class="col-sm-4">Gender:</dt>
                                            <dd class="col-sm-8">
                                                <span class="badge bg-secondary">@Result.ParsedResult.Patient.Gender</span>
                                            </dd>

                                            @if (!string.IsNullOrEmpty(Result.ParsedResult.Patient.Address))
                                            {
                                                <dt class="col-sm-4">Address:</dt>
                                                <dd class="col-sm-8">@Result.ParsedResult.Patient.Address</dd>
                                            }
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Observations -->
                    @if (Result.ParsedResult.Observations?.Any() == true)
                    {
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <h6 class="mb-0">
                                    <i class="fa fa-flask me-1" aria-hidden="true"></i>
                                    Observations (@Result.ParsedResult.Observations.Count)
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var obs in Result.ParsedResult.Observations)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card border-light h-100">
                                                <div class="card-body">
                                                    <h6 class="card-title d-flex justify-content-between align-items-start">
                                                        <span>@obs.Description</span>
                                                        <span class="badge @GetStatusBadgeClass(obs.Status.ToString())">
                                                            @GetStatusText(obs.Status.ToString())
                                                        </span>
                                                    </h6>

                                                    <div class="mb-2">
                                                        <strong class="text-primary">@obs.Value</strong>
                                                        @if (!string.IsNullOrEmpty(obs.Units))
                                                        {
                                                            <span class="text-muted">@obs.Units</span>
                                                        }
                                                    </div>

                                                    @if (!string.IsNullOrEmpty(obs.ReferenceRange))
                                                    {
                                                        <div class="small text-muted mb-2">
                                                            <strong>Reference:</strong> @obs.ReferenceRange
                                                        </div>
                                                    }

                                                    <div class="small">
                                                        <code class="text-muted">@obs.ObservationId</code>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Action Buttons -->
            <div class="d-flex gap-2 justify-content-end">
                <button type="button" class="btn btn-outline-secondary" @onclick="ClearResults">
                    <i class="fa fa-times me-1" aria-hidden="true"></i>
                    Clear Results
                </button>
                <button type="button" class="btn btn-primary" @onclick="ConvertAnother">
                    <i class="fa fa-refresh me-1" aria-hidden="true"></i>
                    Convert Another
                </button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public JsonToHL7Result? Result { get; set; }
    [Parameter] public EventCallback OnClearResults { get; set; }
    [Parameter] public EventCallback OnConvertAnother { get; set; }

    private string CopyStatus = string.Empty;

    private async Task CopyHL7Message()
    {
        if (Result?.HL7Message != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", Result.HL7Message);
                CopyStatus = "Copied!";
                StateHasChanged();

                // Clear the status after 2 seconds
                await Task.Delay(2000);
                CopyStatus = string.Empty;
                StateHasChanged();
            }
            catch (Exception)
            {
                // Fallback for browsers that don't support clipboard API
                CopyStatus = "Copy not supported";
                await Task.Delay(2000);
                CopyStatus = string.Empty;
                StateHasChanged();
            }
        }
    }

    private async Task DownloadHL7Message()
    {
        if (Result?.HL7Message != null)
        {
            var fileName = $"hl7_message_{DateTime.Now:yyyyMMdd_HHmmss}.hl7";
            var content = Result.HL7Message;
            var bytes = System.Text.Encoding.UTF8.GetBytes(content);
            var base64 = Convert.ToBase64String(bytes);

            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "data:text/plain;base64," + base64);
        }
    }

    private async Task ClearResults()
    {
        await OnClearResults.InvokeAsync();
    }

    private async Task ConvertAnother()
    {
        await OnConvertAnother.InvokeAsync();
    }

    private static string GetStatusBadgeClass(string status) => status?.ToUpper() switch
    {
        "N" => "bg-success",
        "A" => "bg-warning",
        "C" => "bg-danger",
        "P" => "bg-info",
        _ => "bg-secondary"
    };

    private static string GetStatusText(string status) => status?.ToUpper() switch
    {
        "N" => "Normal",
        "A" => "Abnormal",
        "C" => "Critical",
        "P" => "Pending",
        _ => "Unknown"
    };
}
